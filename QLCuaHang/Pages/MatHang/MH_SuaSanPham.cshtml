@page
@model QLCuaHang.Pages.MH_SuaSanPhamModel
@using QLCuaHang.Entity
@{
}

<h1>Cập nhật hàng hóa</h1>
<form method="post">
    <label for="thh">Tên hàng hóa:</label><br>
    <input type="text" id="thh" name="tenhang" value="@Model.TenHang"><br />
    <label for="lhh">Loại hàng hóa:</label><br>
    <select name="loaihang" id="lhh">
        <option value="">--- Chọn loại hàng ---</option>
        @foreach (LoaiHangSP lh in Model.dsLH)
        {
            <option value="@lh.tenLH">@lh.tenLH</option>
        }
    </select><br />
    <label for="ct">Công ty sản xuất:</label><br>
    <input type="text" id="ct" name="congty" value="@Model.CongTy"><br />
    <label for="nsx">Ngày sản xuất:</label><br>
    <input type="text" id="nsx" name="ngaySanxuat" value="@Model.NgaySanXuat.Month/@Model.NgaySanXuat.Day/@Model.NgaySanXuat.Year"><br />
    <label for="hsd">Hạn sử dụng:</label><br>
    <input type="text" id="hsd" name="hanSudung" value="@Model.HanSuDung.Month/@Model.HanSuDung.Day/@Model.HanSuDung.Year"><br />

    <input type="submit" value="Cập nhật" />
</form>
<p style="color:red">@Model.Error</p>
